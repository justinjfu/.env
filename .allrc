# vim:ft=sh
export ENV_DIR="$HOME/.env"

alias ls='ls -G'
alias ll='ls -lha'

# Git
alias g='git '
alias gs='git status '
alias ga='git add '
alias gb='git branch '
alias gc='git commit '
alias gd='git diff '
alias go='git checkout '
alias gh='git hist '
alias gp='git push origin '

export PATH=$ENV_DIR/bin:$PATH

# Python-dev headers
export CPATH=$CPATH:/System/Library/Frameworks/Python.framework/Headers

# Python venv switching
export VENVS_DIR=$HOME/.venvs
venv () {
    source $VENVS_DIR/$1/bin/activate
}
_venv()
{
    local cur=${COMP_WORDS[COMP_CWORD]}
    COMPREPLY=( $(compgen -W "$(ls $VENVS_DIR)" -- $cur) )
}
complete -F _venv venv

#JUSTIN MODS
alias pdb='python -m pdb'
function pprofile {
    python -m cProfile -o .profile.txt $1
    #python -c 'import pstats; p=pstats.Stats(".profile.txt"); p.sort_stats("cumulative").print_stats(30)'
    python -c 'import pstats; p=pstats.Stats(".profile.txt"); p.sort_stats("time").print_stats(30)'
    rm .profile.txt
}
alias doctest='python -m doctest'
alias pyprofile='python -m cProfile'
alias pip='sudo pip'
alias ack='ag'
alias un7zip='7z x '
function sshgit {
    eval $(ssh-agent)
    ssh-add ~/.ssh/github_lfd1
    ssh -T git@github.com
}

